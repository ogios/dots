{
  "$schema": "https://raw.githubusercontent.com/ogios/way-edges/master/config/config.schema.json",
  "groups": [
    {
      "name": "test",
      "widgets": [
        {
          "monitor_id": 1,
          "edge": "top",
          "position": "left",
          "widget": {
            "type": "btn",
            "width": 15,
            "height": "25%",
            "frame_rate": 90,
            "event_map": [
              [1, "hyprctl dispatch scroller:movefocus l"],
              [3, "hyprctl dispatch 'workspace -1'"],
            ],
          },
        },
        {
          "monitor_id": 1,
          "edge": "top",
          "position": "right",
          "widget": {
            "type": "btn",
            "width": 15,
            "height": "25%",
            "frame_rate": 90,
            "event_map": [
              [1, "hyprctl dispatch scroller:movefocus r"],
              [3, "hyprctl dispatch 'workspace +1'"],
            ],
          },
        },
      ],
    },
    {
      "name": "slidetest",
      "widgets": [
        {
          "monitor_id": 1,
          "edge": "top",
          "widget": {
            "type": "slide",
            "width": 20,
            "height": 400,
            "transition_duration": 100,
            "frame_rate": 120,
            // "bg_color": "#000000",
            // "fg_color": "#FFD700",
            "bg_color": "#0D47A1",
            "fg_color": "#29B6F6",
            // "bg_color": "#E0F7FA",
            // "fg_color": "#00796B",
            "text_color": "#fff",
            "border_color": "#000",
            "on_change": "notify-send {progress}",
          },
        },
      ],
    },
  ],
}
