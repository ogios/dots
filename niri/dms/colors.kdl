layout {
    background-color "transparent"

    focus-ring {
        active-color   "#a4c9fe"
        inactive-color "#8d9199"
        urgent-color   "#ffb4ab"
    }

    border {
        active-color   "#a4c9fe"
        inactive-color "#8d9199"
        urgent-color   "#ffb4ab"
    }

    shadow {
        color "#00000070"
    }

    tab-indicator {
        active-color   "#a4c9fe"
        inactive-color "#8d9199"
        urgent-color   "#ffb4ab"
    }

    insert-hint {
        color "#a4c9fe80"
    }
}

/-recent-windows {
    highlight {
        active-color   "#204876"
        urgent-color   "#ffb4ab"
    }
}